{
  "name": "deck-ide-desktop",
  "description": "Deck IDE server manager for Windows",
  "author": "Deck IDE",
  "private": true,
  "version": "2.7.0",
  "main": "src/main.cjs",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "node scripts/prepare.cjs && electron-builder --win --x64"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "electron-updater": "^6.1.7",
    "hono": "^4.5.10",
    "node-pty": "^1.0.0",
    "simple-git": "^3.27.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "electron": "40.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.deck.ide",
    "productName": "Deck IDE",
    "electronVersion": "40.0.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "src/**/*",
      "server/**/*",
      "web/dist/**/*",
      "node_modules/@deck-ide/**/*"
    ],
    "asarUnpack": [
      "**/node-pty/**",
      "server/**/*",
      "web/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@deck-ide",
        "to": "app.asar.unpacked/node_modules/@deck-ide",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "tako0614",
      "repo": "ide"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "Deck-IDE-Setup-${version}.${ext}"
    }
  }
}
